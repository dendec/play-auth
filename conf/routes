# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /home                       controllers.Application.home
GET     /login                      controllers.Application.login
GET     /auth                       controllers.Application.auth
GET     /logout                     controllers.Application.logout
POST    /api/user/create            controllers.UserController.create
POST    /api/user/update/:id        controllers.UserController.update(id: Int)
GET     /api/user/:id               controllers.UserController.read(id: Int)
GET     /api/user                   controllers.UserController.readAll

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
